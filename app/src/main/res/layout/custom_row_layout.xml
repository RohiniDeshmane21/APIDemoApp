<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textSize="25sp"
        app:fontFamily="@font/aladin" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/describ"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        style="@style/roundedImageView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/AuthorOrPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textSize="20sp"
        app:fontFamily="@font/alegreya" />

    <TextView
        android:id="@+id/published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AuthorOrPublisher"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textSize="17sp"
        app:fontFamily="@font/alegreya" />

    <TextView
        android:id="@+id/describ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/published"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textSize="17sp"
        app:fontFamily="@font/convergence" />


</RelativeLayout>
